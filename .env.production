# ResearchNexus 生产环境配置
# 用于生产部署

# ============================================
# Supabase 配置（生产环境）
# ============================================
# 使用生产项目的 Supabase 凭证
VITE_SUPABASE_URL=https://prod-project.supabase.co
VITE_SUPABASE_ANON_KEY=prod-anon-key-here

# ============================================
# Google Gemini API 配置
# ============================================
# 生产环境使用生产密钥
GEMINI_API_KEY=prod-gemini-key-here

# ============================================
# Docker 容器配置
# ============================================
# 生产环境使用标准端口
APP_PORT=3000
NGINX_PORT=80
NGINX_HTTPS_PORT=443

# ============================================
# 应用配置
# ============================================
# 生产模式
NODE_ENV=production

# 日志级别（生产环境使用 warn）
LOG_LEVEL=warn

# ============================================
# 性能配置
# ============================================
# 启用缓存
CACHE_ENABLED=true

# 缓存过期时间（秒）
CACHE_TTL=86400

# ============================================
# 监控配置
# ============================================
# 启用性能监控
MONITORING_ENABLED=true

# 启用错误追踪
ERROR_TRACKING=true

# 启用 APM（应用性能监控）
APM_ENABLED=true

# ============================================
# 安全配置
# ============================================
# 启用 CORS
CORS_ENABLED=true

# CORS 允许的源
CORS_ORIGINS=https://example.com,https://www.example.com

# 启用 HTTPS 重定向
HTTPS_REDIRECT=true

# 启用 HSTS
HSTS_ENABLED=true

# HSTS 最大年龄（秒）
HSTS_MAX_AGE=31536000

# ============================================
# 备份配置
# ============================================
# 启用自动备份
BACKUP_ENABLED=true

# 备份频率（小时）
BACKUP_FREQUENCY=24

# 备份保留天数
BACKUP_RETENTION_DAYS=30

# ============================================
# 告警配置
# ============================================
# 启用告警
ALERTS_ENABLED=true

# 告警邮箱
ALERT_EMAIL=admin@example.com

# 告警 Webhook
ALERT_WEBHOOK=https://hooks.example.com/alerts

